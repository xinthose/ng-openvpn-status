{
    "restartable": "rs",
    "verbose": true,
    "ignore": [
        ".git",
        ".vscode",
        "dist",
        "node_modules/**/node_modules",
        "log"
    ],
    "watch": [
        "./**/*.ts",
        "./**/*.config"
    ],
    "exec": "ts-node ./src/app.ts",
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "ts, json"
}